{
  "manifest_version": 3,
  "name": "Gemini Folder Master",
  "version": "1.1",
  "description": "Custom folder management for Gemini chats with right sidebar",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": [
        "scripts/storage.js",
        "scripts/gemini.js",
        "scripts/ui.js",
        "scripts/main.js"
      ],
      "css": ["styles/main.css"],
      "run_at": "document_idle"
    }
  ]
}